mixin dropdown(list)
    .dropdown
        .dropdown__choice
            each li in list
                .dropdown__choice-item
                    h3=li
                    .dropdown__choice-buttons
                        .dropdown__choice-minus.dropdown__choice-minus--DEFAULT
                            p -
                        .dropdown__choice-count 
                            p 0
                        .dropdown__choice-plus 
                            p +
            .dropdown__choice-buttons-li
                .dropdown__clear очистить
                .dropdown__apply применить